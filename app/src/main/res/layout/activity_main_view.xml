<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainViewActivity">

    <LinearLayout
        android:id="@+id/linear_mainloginview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_logo_mainview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blue2"/>

            <TextView
                android:id="@+id/mainview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="MEDDU"
                android:textAlignment="center"
                android:textColor="@color/blue_1"
                android:textStyle="bold"
                android:layout_below="@+id/image_logo_mainview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/textv_hospital_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:text="Hospital Login"
                android:background="@drawable/gdridantcoolor"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/textv_doctor_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:background="@drawable/gdridantcoolor"
                android:layout_below="@+id/textv_hospital_login"
                android:text="Doctor Login"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"

                />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>