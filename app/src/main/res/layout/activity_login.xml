<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_login1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="-15dp"
        android:elevation="15dp">

    <ImageView
        android:id="@+id/roundedImageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blue4"
        android:background="@color/white"
        android:scaleType="centerCrop"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="MEDDU"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"

            />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/card_login2"
        android:visibility="visible"
        android:layout_below="@+id/card_login1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="38dp"
        android:elevation="30dp">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="LOGIN"
            android:textAlignment="center"
            android:textColor="@color/blue_1"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"

            />

        <TextView
            android:id="@+id/text_login_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/login_title"
            android:text="Username:"
            android:textColor="@color/blue_1"
            android:textStyle="normal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"

            />
        <EditText
            android:id="@+id/edittext_login_userid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Enter user name"
            android:backgroundTint="@color/blue_1"
            android:layout_below="@+id/text_login_userid"/>

        <TextView
            android:id="@+id/text_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/edittext_login_userid"
            android:text="Password"
            android:textColor="@color/blue_1"
            android:textStyle="normal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"

            />
        <EditText
            android:id="@+id/edittext_login_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:backgroundTint="@color/blue_1"
            android:layout_below="@+id/text_login_password"/>

        <TextView
            android:id="@+id/text_login_forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="16sp"
            android:layout_below="@+id/edittext_login_password"
            android:text="Forgot Password"
            android:gravity="center"
            android:textColor="@color/blue_1"
            android:textStyle="normal"
            android:paddingStart="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
                       />

        <TextView
            android:id="@+id/text_loginbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/text_login_forgotpassword"
            android:text="LOGIN"
            android:background="@drawable/gdridantcoolor"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingStart="45dp"
            android:paddingEnd="45dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="15dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text_loginbtn"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/text_dontacc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Dont't have an account?"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/blue_1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/text_login_singup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Sign up"
                android:layout_toEndOf="@+id/text_dontacc_title"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="25dp"
                android:gravity="center"
                android:textColor="@color/blue_1"
                android:textStyle="bold"

                android:layout_marginEnd="15dp"
                />
        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_reg2"
        android:visibility="invisible"
        android:layout_below="@+id/card_login1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="38dp"
        android:elevation="30dp">

        <TextView
            android:id="@+id/reg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="REGISTER"
            android:textAlignment="center"
            android:textColor="@color/blue_1"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"

            />

        <TextView
            android:id="@+id/text_reg_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/reg_title"
            android:text="User Name"
            android:textColor="@color/blue_1"
            android:textStyle="normal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"

            />
        <EditText
            android:id="@+id/edittext_reg_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Enter user name"
            android:backgroundTint="@color/blue_1"
            android:layout_below="@+id/text_reg_username"/>

        <TextView
            android:id="@+id/text_reg_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/edittext_reg_username"
            android:text="Mobile Number"
            android:textColor="@color/blue_1"
            android:textStyle="normal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"

            />
        <EditText
            android:id="@+id/edittext_reg_mobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Enter mobile number"
            android:inputType="textPassword"
            android:backgroundTint="@color/blue_1"
            android:layout_below="@+id/text_reg_mobile"/>


        <TextView
            android:id="@+id/text_reg_hospitalname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/edittext_reg_mobile"
            android:text="Hospital Name"
            android:textColor="@color/blue_1"
            android:textStyle="normal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"

            />
        <EditText
            android:id="@+id/edittext_reg_hospitalname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Enter mobile number"
            android:inputType="textPassword"
            android:backgroundTint="@color/blue_1"
            android:layout_below="@+id/text_reg_hospitalname"/>

        <TextView
            android:id="@+id/text_reg_hospitalregno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/edittext_reg_hospitalname"
            android:text="Hospital Registration Number"
            android:textColor="@color/blue_1"
            android:textStyle="normal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"

            />
        <EditText
            android:id="@+id/edittext_reg_hospitalregno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Enter Registration number"
            android:inputType="textPassword"
            android:backgroundTint="@color/blue_1"
            android:layout_below="@+id/text_reg_hospitalregno"/>

        <TextView
            android:id="@+id/text_regbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/edittext_reg_hospitalregno"
            android:text="REGISTER"
            android:background="@drawable/gdridantcoolor"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingStart="45dp"
            android:paddingEnd="45dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="15dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text_regbtn"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/text_dontacc_reg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Alerady have an account?"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/blue_1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/text_reg_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Login"
                android:layout_toEndOf="@+id/text_dontacc_reg_title"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="25dp"
                android:gravity="center"
                android:textColor="@color/blue_1"
                android:textStyle="bold"

                android:layout_marginEnd="15dp"
                />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>