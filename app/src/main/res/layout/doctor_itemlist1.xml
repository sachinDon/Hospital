<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border">

    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeColor="@color/ligt_gray"
        app:strokeWidth="0dp"

        android:id="@+id/imageView_profilelogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/defaultdoctor"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:id="@+id/textView_doctname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_profilelogo"
        android:layout_toEndOf="@id/imageView_profilelogo"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-black"
        android:layout_toStartOf="@+id/textView_doctor_chat"
        android:text="j fghf fghfhgfhgf hfh"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView_doctordegree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_doctname"
        android:layout_toEndOf="@id/imageView_profilelogo"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/textView_doctor_chat"
        android:text="j fghf fghfhgfhgf hfh"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/textView_doctor_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_doctordegree"
        android:layout_toEndOf="@id/imageView_profilelogo"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"

        android:text="Experience: 10yrs"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textView_doctor_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/textView_doctor_exp"
        android:layout_toEndOf="@id/imageView_profilelogo"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        android:text="Status: Availabel"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textView_doctor_chat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/hchat"
        android:layout_alignTop="@+id/imageView_profilelogo"
        android:layout_marginBottom="15dp"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/textView_doctor_message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/hmessage"
        android:layout_alignBottom="@+id/textView_doctor_status"
        android:layout_marginBottom="15dp"
        android:textSize="14sp"/>

</RelativeLayout>