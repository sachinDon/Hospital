<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/relative_paymentgateway_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/text_title_payu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Payment"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/text_back_payu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:text="Back"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_paymentgateway_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_paymenttitle"
                android:text="Enter your payment details"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>



                        <EditText
                            android:id="@+id/email_et"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Enter email"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColorHint="@color/ligt_gray"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:layout_below="@+id/text_paymenttitle"
                            android:background="@drawable/border_round_blue"
                            android:nextFocusDown="@+id/card_name_et"
                            android:textColor="@color/blue_1"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp"/>



                        <EditText
                            android:id="@+id/mobile_et"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Enter mobile"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColorHint="@color/ligt_gray"
                            android:imeOptions="actionDone"
                            android:layout_below="@+id/email_et"
                            android:inputType="numberDecimal"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:background="@drawable/border_round_blue"
                            android:nextFocusDown="@+id/card_name_et"
                            android:textColor="@color/blue_1"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp"/>




                        <EditText
                            android:id="@+id/amount_et"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Enter amount"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColorHint="@color/ligt_gray"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:editable="false"
                            android:enabled="false"
                            android:maxLines="1"
                            android:layout_below="@+id/mobile_et"
                            android:background="@drawable/border_round_blue"
                            android:textColor="@color/blue_1"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp"/>


