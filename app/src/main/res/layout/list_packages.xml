<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border">

    <ImageView
        android:id="@+id/image_title_pkg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_baseline_person_24"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>


    <TextView
        android:id="@+id/text_spc_namae_pkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardiology"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="2dp"
        android:layout_alignTop="@+id/image_title_pkg"
        android:layout_toEndOf="@+id/image_title_pkg"/>
    <RelativeLayout
        android:id="@+id/relative_slects_custveg1"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_below="@+id/image_title_pkg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_round_blue">

        <TextView
            android:id="@+id/text_setprice_custveg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:text="QuterYearly"/>

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_arrow_drop_down_24"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textview_pck_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_spc_namae_pkg"
        android:text="Price: Rs200"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_alignParentEnd="true"

        android:textColor="@color/green_2"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/text_add_pck"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Add"
        android:layout_centerVertical="true"
        android:background="@drawable/gdridantcoolor"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/relative_slects_custveg1"
        android:layout_alignParentRight="true"
                      android:textColor="@color/white"
                  android:textSize="15sp"/>


        </RelativeLayout>






        </RelativeLayout>