<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/text_cs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inquiry Details"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue_1"
           android:layout_centerHorizontal="true"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/edittext_cs_enq_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Name"
            android:gravity="center"
            android:background="@drawable/bottom_border"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@id/text_cs_title"/>

        <EditText
            android:id="@+id/edittext_cs_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text=""
            android:padding="5dp"
            android:minLines="1"
            android:maxLines="4"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Type Message"
            android:gravity="center"
            android:background="@drawable/bottom_border"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@id/edittext_cs_enq_name"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/edittext_cs_desc">

            <TextView
                android:id="@+id/text_cs_enqu_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:text="Cancel"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:textColor="@color/colorred"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/text_cs_enq_ok"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Submit"
                android:gravity="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/text_cs_enqu_cancel"
                android:textColor="@color/blue_1"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"/>
        </RelativeLayout>



    </RelativeLayout>
</ScrollView>
</RelativeLayout>